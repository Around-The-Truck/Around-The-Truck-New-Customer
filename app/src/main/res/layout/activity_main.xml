
             <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                 android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
                 android:paddingRight="@dimen/activity_horizontal_margin"
                 android:paddingTop="@dimen/activity_vertical_margin"
                 android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
                 android:orientation="vertical" >




                 <ImageView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:id="@+id/imageView"
                     android:src="@drawable/photo"
                     android:layout_gravity="center_horizontal"
                     android:layout_marginTop="15.5dp" />


                 <LinearLayout
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical">

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:id="@+id/textView5"
                         android:text="new"
                         android:layout_marginTop="15.5dp"
                         android:layout_gravity="center_horizontal" />

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="New Text"
                         android:id="@+id/textView6"
                         android:layout_gravity="center_horizontal"
                         android:layout_marginTop="5dp" />

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:layout_gravity="center_horizontal"
                       android:layout_marginBottom="15.5dp">


                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:id="@+id/imageView16"
                           android:src="@drawable/heart" />

                       <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/textView7"

                       android:text="new"
                           android:layout_marginLeft="5dp" />

                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:id="@+id/imageView17"
                           android:src="@drawable/dis"
                           android:layout_marginLeft="10dp" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="New Text"
                           android:id="@+id/textView8"
                           android:layout_marginLeft="5dp" />

                   </LinearLayout>



                 </LinearLayout>

                 <LinearLayout
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal">

                     <ImageButton
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="타임라인"
                         android:id="@+id/truckinfobtn"
                         android:src="@drawable/menu1"
                         android:layout_marginLeft="0dp"
                         android:background="#ffffffff" />

                     <ImageButton
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="트럭메뉴"
                         android:id="@+id/menubtn"
                         android:src="@drawable/menu2"
                         android:background="#ffffffff"
                         android:layout_marginLeft="0dp" />

                     <ImageButton
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="트럭정보"
                         android:id="@+id/mapbtn"
                         android:src="@drawable/menu3"
                         android:background="#ffffffff"
                         android:layout_marginLeft="0dp" />
                 </LinearLayout>


                 <fragment
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:id = "@+id/fragment"
                     class = "kr.co.aroundthetruck.customer.BottomTimeLine"
                     tools:layout="@layout/bottom_timeline"
                    />

                 <fragment
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:id = "@+id/fragment_menu"
                     class = "kr.co.aroundthetruck.customer.BottomMenu"
                     tools:layout="@layout/bottom_menu" />



             </LinearLayout>








