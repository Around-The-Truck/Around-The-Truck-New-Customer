
             <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                  tools:context=".MainActivity"
                 android:orientation="vertical"
                 android:focusable="true"
                 android:focusableInTouchMode="true">


                 <ScrollView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:id="@+id/scrollView" >

                     <LinearLayout
                         android:orientation="vertical"
                         android:layout_width="fill_parent"
                         android:layout_height="fill_parent">

                         <LinearLayout
                             android:id="@+id/layout_back"
                             android:orientation="vertical"
                             android:layout_width="fill_parent"
                             android:layout_height="fill_parent">

                             <ImageView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:id="@+id/imageView"
                                 android:src="@drawable/photo"
                                 android:layout_gravity="center_horizontal"
                                 android:layout_marginTop="15.5dp"
                                 android:background="@drawable/photo"
                                 android:paddingEnd="4dp"
                                 android:paddingStart="4dp" />

                             <LinearLayout
                                 android:layout_width="fill_parent"
                                 android:layout_height="wrap_content"
                                 android:orientation="vertical">

                                 <TextView
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:id="@+id/textView5"
                                     android:text="new"
                                     android:layout_marginTop="15.5dp"
                                     android:layout_gravity="center_horizontal"
                                     android:textSize="17dp" />

                                 <TextView
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="New Text"
                                     android:id="@+id/textView6"
                                     android:layout_gravity="center_horizontal"
                                     android:layout_marginTop="10dp"
                                     android:textSize="13dp" />

                               <LinearLayout
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:orientation="horizontal"
                                   android:layout_gravity="center_horizontal"
                                   android:layout_marginBottom="15.5dp"
                                   android:layout_marginTop="13dp">


                                   <ImageView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:id="@+id/imageView16"
                                       android:src="@drawable/dis" />

                                   <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:id="@+id/textView7"

                                   android:text="new"
                                       android:layout_marginLeft="5dp"
                                       android:layout_marginTop="4dp" />

                                   <ImageView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:id="@+id/imageView17"
                                       android:src="@drawable/heart"
                                       android:layout_marginLeft="13dp"
                                       android:layout_marginTop="2dp" />

                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:text="New Text"
                                       android:id="@+id/textView8"
                                       android:layout_marginLeft="5dp"
                                       android:layout_marginTop="4dp" />

                               </LinearLayout>



                             </LinearLayout>
                         </LinearLayout>

                         <LinearLayout
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:orientation="horizontal">

                             <ImageButton
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="타임라인"
                                 android:id="@+id/truckinfobtn"
                                 android:src="@drawable/menu1"
                                 android:background="#ffffffff" />

                             <ImageButton
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="트럭메뉴"
                                 android:id="@+id/menubtn"
                                 android:src="@drawable/menu2"
                                 android:background="#ffffffff" />

                             <ImageButton
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="트럭정보"
                                 android:id="@+id/mapbtn"
                                 android:src="@drawable/menu3"
                                 android:background="#ffffffff" />

                         </LinearLayout>


                         <fragment
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:id = "@+id/fragment"
                             class = "kr.co.aroundthetruck.customer.BottomTimeLine"
                             tools:layout="@layout/bottom_timeline"
                             />

                         <fragment
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:id = "@+id/fragment_menu"
                             class = "kr.co.aroundthetruck.customer.BottomMenu"
                             tools:layout="@layout/bottom_menu"
                             />


                     </LinearLayout>
                 </ScrollView>







             </LinearLayout>








