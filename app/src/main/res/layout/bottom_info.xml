<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/pic"
            android:padding="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/brand"
            android:layout_below="@+id/phone"
            android:layout_alignLeft="@+id/phone"
            android:layout_alignStart="@+id/phone"
            android:layout_marginTop="13dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/phone"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="40dp"
            android:textSize="18sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/brand"
            android:layout_alignLeft="@+id/brand"
            android:layout_alignStart="@+id/brand"
            android:layout_marginTop="19.25dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView21"
                android:src="@drawable/spot" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView"
                android:layout_below="@+id/brand"
                android:layout_alignLeft="@+id/brand"
                android:layout_alignStart="@+id/brand"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5.5dp"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/imageView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12.75dp"
            android:background="@drawable/white"
            android:id="@+id/linearLayout">

            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30.25dp">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="85.5dp"
                android:id="@+id/imageView4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="65dp"
                android:layout_height="85.5dp"
                android:id="@+id/imageView5"
                android:layout_alignTop="@+id/imageView4"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30.25dp" />

            <ImageView
                android:layout_width="65dp"
                android:layout_height="85.5dp"
                android:id="@+id/imageView6"
                android:layout_alignTop="@+id/imageView5"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="30.25dp" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="85.5dp"
                    android:id="@+id/imageView7"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="18.75dp" />

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="85.5dp"
                    android:id="@+id/imageView8"
                    android:layout_alignTop="@+id/imageView4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="30.25dp"
                    android:layout_marginTop="18.75dp" />

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="85.5dp"
                    android:id="@+id/imageView9"
                    android:layout_alignTop="@+id/imageView5"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="30.25dp"
                    android:layout_marginTop="18.75dp" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
