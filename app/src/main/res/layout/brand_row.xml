<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:background="@drawable/listback">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView12"
            android:src="@drawable/opentag"
            android:layout_marginTop="15dp"
            android:visibility="invisible"/>

        <ImageView
                android:layout_width="148.75dp"
                android:layout_height="148.75dp"
                android:id="@+id/brandimage"
                android:background="@drawable/imgback"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
            android:layout_marginTop="21.25dp"
            android:padding="2dp"
            android:adjustViewBounds="false"
            android:layout_marginLeft="22.5dp" />
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
                android:layout_marginTop="30.5dp">
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/brandname"

                 android:textSize="17dp"
                 android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/category"
                android:layout_marginTop="7dp"
                android:textSize="13dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView14"
                        android:src="@drawable/dis"
                        android:layout_marginLeft="1dp" />

                    <TextView
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/distance"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView15"
                        android:src="@drawable/heart"
                        android:layout_marginTop="5dp" />

                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/like"
                        android:layout_marginLeft="6.3dp"
                        android:layout_marginTop="5dp" />

                </LinearLayout>

            </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton4"
            android:src="@drawable/unlike"
            android:background="#ffffffff"
            android:layout_gravity="bottom|right"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>
